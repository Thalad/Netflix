{% extends "inc/layout.html.twig" %}

{% block content %}
        <div class="col-md-12">
                <h1>Detail du film</h1>
                <img src="{{ asset('uploads/images/' ~ film.image) }}" alt="{{ film.name }}"/>
                <video><source src="{{ asset('uploads/videos/' ~ film.video) }}" type="video/mp4"></video>
                <h2>TITRE : {{ film.name }}</h2>
                <h3>DATE : {{ film.date|date("d/Y") }}</h3>
                <h3>ACTEURS : {{ film.actor }}</h3>
                <h3>NOTE : {{ film.note }}/10</h3>
                <p>DESCRIPTION : {{ film.description }}</p>
                <a href="{{ path('films_list')}}">Liste des films</a>
        </div>
{% endblock %}